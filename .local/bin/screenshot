#!/bin/bash

FILE=$XDG_PICTURES_DIR/screenshots/"$(date +"%Y-%m-%d_%H-%M-%S").png"

if [[ "$1" == "--select" ]]; then
    flameshot gui --path $FILE
    STATUS=$?
else
    grim $FILE
    STATUS=$?
fi

if [[ $STATUS -eq 0 ]]; then 
    notify-send -a screenshot "New screenshot" "$FILE" -i applets-screenshooter
    wl-copy < $FILE &
fi
